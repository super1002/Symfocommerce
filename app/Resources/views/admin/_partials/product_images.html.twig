{% if product.images|length %}
    {% for image in product.images|slice(0, 3) %}
        <a class="fancybox" rel="group" href="{{ asset(('uploads/images/' ~ image.image)) }}">
            <img src="{{ asset( ('uploads/images/' ~ image.image) | imagine_filter('some_thumb')) }}"/>
        </a>
    {% endfor %} ...
{% else %}
    {{ 'no photos'|trans }}
{% endif %}
